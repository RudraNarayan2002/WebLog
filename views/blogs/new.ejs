<% layout('layouts/boilerplate') %>

 <div class="row">
     <h1 class="text-center">New Blog</h1>
     <div class="col-6 offset-3">
        <form action="/blogs" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" placeholder="Enter Title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="blog[description]" placeholder="Type Here..." required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]" placeholder="Add image address" required>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Blog</button>
            </div>
        </form>
        <a class="btn btn-warning" href="/blogs">All Blogs</a>
     </div>
 </div>


