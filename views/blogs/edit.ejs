<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Blog</h1>
    <div class="col-6 offset-3">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" novalidate class="validated-form">
           <div class="mb-3">
               <label class="form-label" for="title">Title</label>
               <input class="form-control" type="text" id="title" name="blog[title]" value="<%=blog.title%>" required>
           </div>
           <div class="mb-3">
               <label class="form-label" for="description">Description</label>
               <textarea class="form-control" type="text" id="description" name="blog[description]" required ><%=blog.description%></textarea>
           </div>
           <div class="mb-3">
               <label class="form-label" for="image">Image Url</label>
               <input class="form-control" type="text" id="image" name="blog[image]" value="<%=blog.image%>" required>
           </div>
           <div class="mb-3">
               <button class="btn btn-success">Update Blog</button>
           </div>
           
       </form>
       <a class="btn btn-warning" href="/blogs/<%=blog._id%>">Back to Blog</a>
    </div>
</div>
